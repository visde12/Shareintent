<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shareintent.vijay.shareintent.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:id="@+id/phone"
        android:onClick="viewphone"
        android:layout_alignParentTop="true"

        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:id="@+id/location"
        android:onClick="location"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mapevent"
        android:id="@+id/mapevent"
        android:onClick="mapevent"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Calender"
        android:id="@+id/calender"
        android:onClick="calender"
        android:layout_below="@id/mapevent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Email"
        android:id="@+id/email"
        android:onClick="email"
        android:layout_below="@+id/calender"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Share"
        android:id="@+id/share"
        android:onClick="share"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pickcontact"
        android:id="@+id/pickcontact"
        android:onClick="pickcontact"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/phone"
        android:layout_marginTop="28dp" />

</RelativeLayout>
